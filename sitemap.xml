<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- assign categories = 'manuale pubblicazioni spoiler' | split: ' ' %}
{%- for category in categories %}
    {%- for post in site[category] %}
    <url>
        <loc>{{site.url}}{{ post.url | remove: 'index.html' }}</loc>
        {%- if post.last_modified_at != nil %}
        <lastmod>{{ post.last_modified_at | date: '%F' }}</lastmod>
        {%- elsif post.date != nil %}
        <lastmod>{{ post.date | date: '%F' }}</lastmod>
        {%- endif %}
    </url>
    {%- endfor %}
{%- endfor %}
{%- for page in site.pages %}
    {%- if page.layout != nil and page.layout != 'feed' %}
    <url>
        <loc>{{site.url}}{{ page.url | remove: 'index.html' }}</loc>
        {%- if page.last_modified_at != nil %}
        <lastmod>{{ page.last_modified_at | date: '%F' }}</lastmod>
        {%- elsif page.date != nil %}
        <lastmod>{{ page.date | date: '%F' }}</lastmod>
        {%- endif %}
    </url>
    {%- endif %}
{%- endfor %}
</urlset>